            <option description="Deny him the object and try to continue." nextDialogueId="19" reward="5 Sins"/>
            <option description="Try to knock him out to get his boat for yourself." nextDialogueId="chironBattle"/>
        </options>
    </dialogue>
    <dialogue id="18">
        <text>
        You give Chiron the tooth, and he takes you with his boat to the other side of the river.
        You get 5 Sin points.
        </text>
        <nextDialogueId>20</nextDialogueId>
    </dialogue>
